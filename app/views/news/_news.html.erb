<p>
  <% if news.is_private? %>
    <%= tag.i(class: 'fa fa-lock', title: I18n.t('news_private'), style: 'margin-right: 5px;') %>
  <% end %>
  <%= link_to_project(news.project) + ': ' unless @project %>
  <%= link_to h(news.display_title), news_path(news) %>
  <%= "(#{l(:label_x_comments, :count => news.comments_count)})" if news.comments_count > 0 %>
  <br />
  <% unless news.summary.blank? %>
    <span class="summary">
      <%=h news.summary %>
    </span>
    <br />
  <% end %>
  <span class="author">
    <%= authoring news.created_on, news.author %>
  </span>
</p>
