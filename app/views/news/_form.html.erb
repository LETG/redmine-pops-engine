<%= error_messages_for @news_1 %>

<div class="box tabular">
<p class="<%= (@news.errors && @news.errors.has_key?(:title) ? 'with-errors' : '') %>">
  <%= f.text_field :title, :required => true, :size => 60 %>
  <% if @news.errors && @news.errors.has_key?(:title) %>
    <span class="error-msg"><%= @news.errors[:title].join(', ') %></span>
  <% end %>
</p>

<% if @project && @project.is_public %>
  <p>
    <%= f.check_box :private, { checked: (f.object.private || false), label: '', style: "float: left; margin-top: 5px !important;" } %>
    <label for="private" style="float: left; text-align: left; width: auto;"><%= I18n.t("field_private") %></label>
  </p>
<% else %>
  <p style="display: none;"><%= f.check_box :private, value: true, checked: true %></p>
<% end %>

<p>
  <%= f.check_box :visible_in_timeline, { checked: (f.object.visible_in_timeline || false), label: '', style: "float: left; margin-top: 5px !important;" } %>
  <label for="visible_in_timeline" style="float: left; text-align: left; width: auto;"><%= I18n.t("field_visible_in_timeline") %></label>
</p>

<p>
  <%= f.check_box :notifications_disabled, { checked: (f.object.notifications_disabled || false), label: '', style: "float: left; margin-top: 5px !important;" } %>
  <label for="notifications_disabled" style="float: left; text-align: left; width: auto;"><%= I18n.t("field_notifications_disabled") %></label>
</p>

<% if @project && @project.parent %>
  <p>
    <%= f.check_box :notify_users_in_parent_projects, { checked: (f.object.notify_users_in_parent_projects || false), label: '', style: "float: left; margin-top: 5px !important;" } %>
    <label for="notify_users_in_parent_projects" style="float: left; text-align: left; width: auto;"><%= I18n.t("field_notify_users_in_parent_projects") %></label>
  </p>
<% end %>

<p style="margin-top: 15px;"><%= f.text_field :announcement_date, class: "datepicker", value: f.object.timeline_display_date('%d/%m/%Y') %></p>

<br/>
<p class="<%= (@news.errors && @news.errors.has_key?(:summary) ? 'with-errors' : '') %>">
  <%= f.text_area :summary, :cols => 60, :rows => 2 %>
  <% if @news.errors && @news.errors.has_key?(:summary) %>
    <span class="error-msg"><%= @news.errors[:summary].join(', ') %></span>
  <% end %>
</p>
<p><%= f.text_area :description, :required => true, :cols => 60, :rows => 15, :class => 'wiki-edit' %></p>
<p id="attachments_form"><label><%= l(:label_attachment_plural) %></label><%= render :partial => 'attachments/form', :locals => {:container => @news_1} %></p>
</div>

<%= wikitoolbar_for 'news_description' %>
